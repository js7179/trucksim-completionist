{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ES2022", "ES2020"],
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
    },
    "types": ["vitest/globals"]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "src/environment.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "**/node_modules/*"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}